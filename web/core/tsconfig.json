{
  "compilerOptions": {
    "declaration": true,                // Генерировать .d.ts
    "emitDeclarationOnly": true,        // Только типы, без JS
    "outDir": "./dist/types",          // Куда положить .d.ts
    "rootDir": "./src",                 // Откуда брать исходники
    "module": "ESNext",                 // Поддержка ES-модулей
    "target": "ESNext",
    "moduleResolution": "node",         // Важно для Vite
    "esModuleInterop": true,            // Совместимость с CommonJS
    "strict": true                      // Строгая проверка типов
  },
  "include": ["src/**/*.ts","src/**/*.tsx"],           // Какие файлы компилировать
  "exclude": ["node_modules"],
}